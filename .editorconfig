# http://EditorConfig.org
root = true

[*]
charset = utf-8
# end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
indent_style = space

# Markdown
[*.md]
indent_size = 4
indent_style = space

[package.json]
indent_size = 2
indent_style = space

[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

[*.s[ac]ss]
indent_size = 2
indent_style = space

[*.html]
insert_final_newline = false
indent_size = 2
continuation_indent_size = 4
indent_style = space

[*.sh]
indent_size = 4
